@{
    ViewData["Title"] = "Customer Database";
    Layout = "~/Views/Admin/Shared/Layout.cshtml";
}
@using ZAlpha.Application.Common.Models;
@using ZAlpha.Application.Comment.Queries.GetComment;
@model ZAlpha.Application.Common.Models.PaginatedList<CommentModel>

<body>
    <!-- Page wrapper  -->
    <div class="page-wrapper">
        <!-- Bread crumb -->
        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h3 class="tex-primary">Danh sách người dùng</h3>
            </div>
            <div class="col-md-7 align-self-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Admin/Index">Admin</a></li>
                    <li class="breadcrumb-item active">Danh sách người dùng thông thường</li>
                </ol>
            </div>
        </div>
        <!-- End Bread crumb -->
        <!-- Container fluid  -->
        <div class="container-fluid">
            <!-- Start Page Content -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body" style="margin-top:-60px">
                            <div class="table-responsive m-t-40">
                                <table id="myTable" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nội Dung</th>
                                            <th>Người Đăng</th>
                                            <th>trạng thái</th>
                                            <th>Ngày Bình Luận</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td width="400px">@item.Description</td>
                                                <td> 
                                                    @if (@item.InteractWithComments[0].UserAccount != null)
                                                    {
                                                        @item.InteractWithComments[0].UserAccount.FirstName @item.InteractWithComments[0].UserAccount.LastName
                                                    }
                                                </td>
                                                <td>@item.Created</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End PAge Content -->
        </div>
        <!-- End Container fluid  -->
    </div>
    <!-- End Page wrapper  -->
</body>