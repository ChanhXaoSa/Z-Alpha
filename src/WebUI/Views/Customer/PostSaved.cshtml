@{
    ViewBag.Title = "Customer Post";
    Layout = "~/Views/Shared/Customer_Layout.cshtml";    
}
@using ZAlpha.Application.Common.Models;
@using ZAlpha.Application.Post.Queries.GetAllPost;
@using ZAlpha.Application.Post.Queries.GetPostById;
@using ZAlpha.Application.WishListPost;
@using ZAlpha.Domain.Enums;
@using ZAlpha.Application.Utils.FormatDate;
@model ZAlpha.Application.Common.Models.PaginatedList<WishListPostModel>
<head>
    <title>Customer Saved</title>
</head>



<div class="DivBaiViet">
    <div style="font-weight:800;">
        DANH SÁCH BÀI VIẾT ĐÃ LƯU CỦA BẠN
    </div>
    @* ----------Div này là 1 post ---------*@
    @foreach (var postModel in Model.Items)
    {            
    <div class="box">
        <div>
            <div style="position:relative ;">
                <i id="bookmarkIcon" style="color: yellow; position: absolute; top:10px; right:10px;" class="fa-solid fa-bookmark"></i>
                <br />
            </div>
                @foreach(var postTags in postModel.post.PostTags)
                {
                    <div class="textbox">@postTags.Tag.TagName</div>
                }           

        </div>
        <div class="TiltePost">
            <strong>
                @postModel.post.PostTitle
            </strong>
        </div>

        <div class="row">
            <div class="col-6">
                <img class="" style="width: 100%; border-radius: 10px" src="../@postModel.post.PostImagesUrl" />
            </div>
            <div class="col-6">
                <div class="row" style="position:relative;">
                    <div class="col-2">
                        <img style="width:3.7vw;border-radius: 9999px" src="https://via.placeholder.com/38x38" />
                    </div>
                    <div class="col-10" style="position: absolute; left:5vw; top:0.3vw;">
                        <div style="color: black; font-size: 18px; font-family: Inter; font-weight: 500; word-wrap: break-word">@postModel.UserAccount.UserName</div>
                        <div style="color: #FF6C37; font-size: 12px; font-family: Inter; font-weight: 400; word-wrap: break-word">@FormatDate.CalTimeBetweenTwoDate(postModel.post.Created)</div>
                    </div>
                </div>
                <div class="hashtag">
                    <p>#kiemtien</p>
                    <p>#nghihoc</p>
                </div>
                <div class="PostText">
                   @postModel.post.PostBody
                </div>
            </div>
        </div>
        <div class="row" style="margin-top:2vh;">
            @* <div class="col-2">
                <button class="button-2" style="height: 32px;" role="button"><i class="fa-solid fa-pen-to-square"></i> Chính sửa</button>
            </div>
            <div class="col-2">
                <button class="button-62" style="height: 32px;" role="button"><i class="fa-solid fa-trash"></i> Xóa</button>
            </div>
 *@
            <div class="col-6">
                <button class="button-10" style="width: 20vw;  font-size: 14px;" role="button"> Xem chi tiết </button>
            </div>
            <div class="col-2">
                @* <button class="button-10" style="width: 6vw;  font-size: 14px;" role="button"> Save </button> *@
            </div>
        </div>
    </div>
    }
    @*-----------------------------------*@
</div>
