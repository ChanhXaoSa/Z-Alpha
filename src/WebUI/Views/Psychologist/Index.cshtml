@{
    ViewBag.Title = "Ppychologist Info";
    Layout = "~/Views/Shared/Psychologist_Layout.cshtml";
}
@using ZAlpha.Application.Common.Models;
@using ZAlpha.Application.PsychologistAccount.Queries.GetAllPsychologistAccount;
@model PsychologistAccountModel

<head>
    <title>Psychologist Profile</title>
    <style>
        .DescriptionPpychologistBox {
          
            border-radius: 7px;
            background-color: whitesmoke;
            box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
            padding: 1vw 2vw 1vw 2vw;
            margin-top: 2rem;
            flex-wrap: wrap;
            font-size:0.9rem;        }
    </style>
</head>
    
<div class="boxProfile">
   <div class="row">
       <div class="col-3">
            <img style="width: 12vw; display:block;  margin:0 auto; max-height: 15vw; border-radius: 10px" src="@(Model.UserAccount.AvatarUrl==null?"https://img.cand.com.vn/resize/800x800/NewFiles/Images/2023/06/01/313437324_530297825770289_851393-1685621442627.jpg":Model.UserAccount.AvatarUrl)" />
            <div style="padding: 0.1rem 0;">        
                <i class="fa-solid fa-star fa-xs" style="color:yellow"></i>
                <i class="fa-solid fa-star fa-xs" style="color:yellow"></i>
                <i class="fa-solid fa-star fa-xs" style="color:yellow"></i>
                <i class="fa-solid fa-star fa-xs" style="color:yellow"></i>
                <i class="fa-solid fa-star fa-xs" style="color:yellow"></i>
                <div style="display:inline-block; color: black; margin:auto 0; font-size: 12px; font-family: Inter; font-weight:400;">(5.0)</div>               
            </div>
            <div style="color: black; font-size: 16px; font-family: Inter; font-weight: 500; word-wrap: break-word; padding: 0.1rem 0;">Psy. @Model.UserAccount.FirstName @Model.UserAccount.LastName </div>
            <div style=" color: #063C8E; font-size: 10px; font-family: Inter; font-weight: 400; word-wrap: break-word; padding: 0.1rem 0;">@Model.UserAccount.Address</div>
       </div>
       <div class="col-9">
            @*Mấy cái chỗ này đang k biết làm sao cho lên dữ liệu như nào luôn*@
            @*Database chưa có field cho mấy cái này nên set cứng đỡ*@
            <div>
                <span style="color: black; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word">Lĩnh vực nghiên cứu:</span>
                <span style="color: black; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">
                    @(Model.Specialize != null ? Model.Specialize : "Nhà tâm lý chưa bổ sung thông tin Lĩnh vực nghiên cứu")
                </span><br />

                <span style="color: black; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word">Nơi công tác:</span>
                <span style="color: black; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">
                    @(Model.Workplace != null ? Model.Workplace : "Nhà tâm lý chưa bổ sung thông tin nơi làm việc")
                </span><br />

                <span style="color: black; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word">Chức vụ:</span>
                <span style="color: black; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">
                    @(Model.Position != null ? Model.Position : "Nhà tâm lý chưa bổ sung thông tin vị trí công tác")
                </span>
            </div>
            <div style="width: 70%; height: 0px; border: 1px #063C8E solid; margin:0.8rem 0;"></div>
            <div style="width: 455px">
                <span style="color: black; font-size: 14px; font-family: Inter; font-weight: 600;  word-wrap: break-word">Các cột mốc nổi bật:<br /></span>
                <span style="color: black; font-size: 14px; font-family: Inter; font-weight: 400;  word-wrap: break-word"> @(Model.Milestones != null ? Model.Milestones : "Nhà tâm lý chưa cập nhật cột mốc") </span>           
            </div>
            <br />
            <div class="row">
                <div class="col-5">
                    <div style="color: #063C8E; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word; margin-bottom:0.5rem;">
                        Số điện thoại
                    </div>
                    <div style="width: 12vw; font-size: 13px; height: 30px; background: white; border-radius: 10px; padding:0 0.5rem; display:flex; align-items: center;">
                        @Model.UserAccount.Phone
                    </div>
                </div>
                <div class="col-7">
                    <div style="color: #063C8E; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word; margin-bottom:0.5rem;">
                        Email
                    </div>
                    <div style="width: 17vw; font-size: 13px; height: 30px; background: white; border-radius: 10px; padding:0 0.5rem; display:flex; align-items: center;">
                        @Model.UserAccount.Email
                    </div>
                </div>
            </div>
       </div>
   </div>

   <div class="row">
        <div class="DescriptionPpychologistBox">
            <p> @(Model.Intro != null ? Model.Intro : "Nhà tâm lý chưa bổ sung thông tin thông tin giới thiệu") </p>
       </div>
   </div>
</div>
