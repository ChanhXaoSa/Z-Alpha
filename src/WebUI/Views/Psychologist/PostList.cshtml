@{
    ViewBag.Title = "Psychologist Post";
    Layout = "~/Views/Shared/Psychologist_Layout.cshtml";
}
<head>
    <title>Psychologist Post</title>
</head>
@using Microsoft.AspNetCore.Mvc;
@using ZAlpha.Application.Tag.Queries;
@using ZAlpha.Application.Post.Queries.GetAllPost;
@using ZAlpha.Application.InteractWithPost.Queries.GetAllInteractWithPost;
@model ZAlpha.Application.Common.Models.PaginatedList<InteractWithPostModel>

<div class="DivBaiViet">
    <div style="font-weight:800;">
        DANH SÁCH BÀI VIẾT CỦA BẠN
    </div>
    @* ----------Div này là 1 post ---------*@
    @foreach (var item in Model.Items)
    {
        <div class="box">
            <div>
                <div style="position:relative ;">
                    <i style="position: absolute; top:10px; right:10px;" class="fa-solid fa-arrow-up-wide-short fa-l"></i>
                    <br />
                </div>
                @foreach (var postTag in item.post.PostTags)
                {
                    <div class="textbox"> @postTag.Tag.TagName </div>
                }
            </div>
            <div class="TiltePost">
                <strong>
                    @item.post.PostTitle
                </strong>
            </div>

            <div class="row">
                <div class="col-6">
                    <img class="" style="width: 100%; border-radius: 10px" src="@item.post.PostImagesUrl" />
                </div>
                <div class="col-6">
                    <div class="row" style="position:relative;">
                        <div class="col-2">
                            <img style="width:3.7vw;border-radius: 9999px" src="https://via.placeholder.com/38x38" />
                        </div>
                        <div class="col-10" style="position: absolute; left:5vw; top:0.3vw;">
                            <div style="color: black; font-size: 18px; font-family: Inter; font-weight: 500; word-wrap: break-word">@item.UserAccount.FirstName @item.UserAccount.LastName</div>
                            <div style="color: #FF6C37; font-size: 12px; font-family: Inter; font-weight: 400; word-wrap: break-word">@item.post.Created</div>
                        </div>
                    </div>
                    <div class="hashtag">
                        <p>#kiemtien</p>
                        <p>#nghihoc</p>
                    </div>
                    <div class="PostText">
                        @item.post.PostBody
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:2vh;">
                <div class="col-2">
                    <button class="button-2" style="height: 32px;" role="button"><i class="fa-solid fa-pen-to-square"></i> Chính sửa</button>
                </div>
                <div class="col-2">
                    <button class="button-62" style="height: 32px;" role="button"><i class="fa-solid fa-trash"></i> Xóa</button>
                </div>

                <div class="col-6">
                    <form action="~/Post" method="get">
                        <input type="hidden" name="postID" value="@item.PostId" />
                        <button class="button-10" style="width: 20vw;  font-size: 14px;" role="button"> Xem chi tiết </button>
                    </form>             
                </div>
                <div class="col-2">
                    @* <button class="button-10" style="width: 6vw;  font-size: 14px;" role="button"> Save </button> *@
                </div>
            </div>
        </div>
    }
