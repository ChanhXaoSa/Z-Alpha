@using Microsoft.AspNetCore.Identity;
@using ZAlpha.Domain.Identity;

@inject SignInManager<UserAccount> _signInManager;
@inject UserManager<UserAccount> _userManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/assets/css/layout.css"
    <!-- Thêm các tệp tin JS của jQuery từ CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <!-- Thêm các tệp tin CSS của Toastr từ CDN -->
    <link href="cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

    <!-- Thêm các tệp tin JS của Toastr từ CDN -->
    <script src="cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

</head>
<body>
    <header class="header">
        <div class="">
            <div class="HeaderRow">
                <div class="">
                    <div class="row" style="height:60px; margin:0px;">
                        <div class="col-1" style=" height:60px; display: flex; align-items:center; justify-content:center;">
                            <div class="logo"></div>
                        </div>

                        <div class="col-3" style="height:60px;">
                            <form action="~/Home/Search" method="post" enctype="multipart/form-data">
                                <div class="group-search">
                                    <svg class="icon-search" aria-hidden="true" viewBox="0 0 24 24">
                                        <g>
                                            <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
                                        </g>
                                    </svg>
                                    <input placeholder="Tìm kiếm bài viết" name="keySearch" type="search" class="input-search">
                                </div>
                            </form>                        
                        </div>
                        <div class="col-4 route-header">
                                <div class="row">
                                    <div class="boxtext col-3"><a href="~/Home" style="text-decoration:none">Newfeed</a></div>
                                    <div class="boxtext col-3"><a>Category</a></div>
                                    <div class="boxtext col-3"><a href="~/Recommend/" style="text-decoration:none">Recommend</a></div>
                                    <div class="boxtext col-3"><a href="~/Route/NewPost" style="text-decoration:none">Newpost</a></div>
                                </div>
                        </div>
                        <div class="col-1">
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="col-3">
                                <div class="row">
                                    <div class="col-5">
                                        <div class="row" style=" position: relative;">
                                            @{
                                                var user = await _signInManager.UserManager.FindByNameAsync(User.Identity.Name);
                                            }
                                            <a href="~/Route/Info">
                                                @if (user.AvatarUrl != null)
                                                {
                                                    <img class="EllipseImg" src="@user.AvatarUrl" />
                                                } else
                                                {
                                                    <img class="EllipseImg" src="https://cdn.sforum.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg" />
                                                }
                                            </a>
                                            <a href="~/Route/Info" style="z-index:2; text-decoration:none; padding:10px 0px 0px 70px; position: absolute; color: black; font-size: 14px; font-family: Inter; font-weight: 600"> @user.FirstName @user.LastName </a>
                                            @if (user.IsPremium == ZAlpha.Domain.Enums.PremiumStatus.Active)
                                            {
                                                <div class="" style=" padding:30px 0px 0px 70px; position: absolute; color: #F08E17; font-size: 10px; font-family: Inter; font-weight: 400; word-wrap: break-word">Premium</div>
                                            }
                                            else
                                            {
                                                <div class="" style=" padding:30px 0px 0px 70px; position: absolute; color: #009EFF; font-size: 10px; font-family: Inter; font-weight: 400; word-wrap: break-word">Freemium</div>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-7">
                                        <div class="row" style=" position: relative;">
                                            <div style=" position: absolute;">
                                                <button class="buttonHeader" style="width:7vw; height: 20px; margin-top:4.5px; display: block; font-size: 10px;"> Membership</button>
                                                <form method="get" action="~/logout">
                                                    <button class="buttonHeader" style="width:7vw; height: 20px; margin-top:6px; display: block; font-size: 10px; background-color: #9ACFC3;"> Sign Out</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        }
                        else
                        {
                            <div class="col-2">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="row" style=" position: relative;">
                                            <div style=" position: absolute;">
                                                <form action="~/Login" method="get">
                                                    <button class="buttonHeader" style="width:7vw; height: 20px; margin-top:4.5px; margin-left: 4vw; display: block; font-size: 10px;"> Sign In</button>
                                                </form>
                                                <form method="get" action="~/Register">
                                                    <button class="buttonHeader" style="width:7vw; height: 20px; margin-top:6px;   margin-left: 4vw; display: block; font-size: 10px; background-color: #9ACFC3;">Sign up</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </header>
    <div class="" style="margin:5px 10vw;">

        @RenderBody()

    </div>

    <footer>
        <div class="FooterRow" style="height:280px; position: relative">
            <div style="width: 100%; height: 280px; left: 0px; top: 0px; position: absolute; background: #FFFDAB"></div>
            <div class="row">
                <div class="col-4" style="padding:3vw 5vw;">

                    <div style=" position: absolute; display:block; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word">Địa chỉ</div>
                    <br />
                    <div style=" position: absolute; display:block; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Lô E2a-7, Đường D1, Đ. D1, Long Thạnh Mỹ,<br />Thành Phố Thủ Đức, Thành phố Hồ Chí Minh, Việt Nam</div>
                    <br />
                    <br />
                    <div style=" position: absolute; display:block; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word">Hotline</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">1900 0007</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word">Email</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">zalphasupport@gmail.com</div>

                </div>
                <div class="col-2" style="padding:3vw 5vw;">
                    <div style="position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Về chúng tôi</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Chính sách bảo mật</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Điều khoản sử dụng</div>
                </div>
                <div class="col-2" style="padding:3vw 5vw;">

                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Đăng ký cộng tác viên</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Câu hỏi thường gặp</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Tải app mobile</div>
                    <br />

                </div>
                <div class="col-4" style="padding:3vw 5vw;">
                    <div style=" position: absolute;">
                        <i class="fa-brands fa-square-facebook fa-2xl" style="color:#DEA941; margin:0.3vw;"></i>

                        <i class="fa-brands fa-square-instagram fa-2xl" style="color:#DEA941; margin:0.3vw;"></i>

                        <i class="fa-brands fa-square-x-twitter fa-2xl" style="color:#DEA941; margin:0.3vw;"></i>
                    </div>
                </div>

            </div>


        </div>
    </footer>
</body>
</html>