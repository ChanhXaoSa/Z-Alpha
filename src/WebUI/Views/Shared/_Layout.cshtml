@using Microsoft.AspNetCore.Identity;
@using ZAlpha.Domain.Identity;

@inject SignInManager<UserAccount> _signInManager;
@inject UserManager<UserAccount> _userManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Thêm các tệp tin JS của jQuery từ CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <!-- Thêm các tệp tin CSS của Toastr từ CDN -->
    <link href="cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

    <!-- Thêm các tệp tin JS của Toastr từ CDN -->
    <script src="cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>


    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
        }

        .HeaderRow, .FooterRow {
            width: 100%;
            margin: 0 auto;
        }

        .container {
            margin: 0 auto;
        }

        .header {
            position: relative;
            background-color: #FFFDAB;
            box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
            height: 60px;
        }

        .ImageLogo {
            position: absolute;
            width: 4.5vw;
            max-height: 3em;
            margin: auto;
        }


        * {
            box-sizing: border-box;
        }


        .search-box {
            width: fit-content;
            height: fit-content;
            position: absolute;
            margin-top: 10px;
        }

        .input-search {
            height: 40px;
            width: 40px;
            border-style: none;
            font-size: 16px;
            outline: none;
            border-radius: 25px;
            transition: all .5s ease-in-out;
            background-color: #8ed1c2;
            padding-right: 40px;
            color: black;
        }

            .input-search::placeholder {
                color: wheat;
                font-size: 16px;
                font-weight: 100;
            }

        .btn-search {
            width: 40px;
            height: 40px;
            border-style: none;
            font-size: 16px;
            font-weight: bold;
            outline: none;
            cursor: pointer;
            border-radius: 50%;
            position: absolute;
            right: 0px;
            color: white;
            background-color: transparent;
            pointer-events: painted;
        }

            .btn-search:focus ~ .input-search {
                width: 22vw;
                border-radius: 0px;
                background-color: transparent;
                border-bottom: 1px solid black;
                transition: all 500ms cubic-bezier(0, 0.110, 0.35, 2);
            }

        .input-search:focus {
            width: 22vw;
            border-radius: 0px;
            background-color: transparent;
            border-bottom: 1px solid black;
            transition: all 500ms cubic-bezier(0, 0.110, 0.35, 2);
        }

        .boxtext {
            /*  background-color: #008CA1; */

            margin: 0 0.05em;
            text-align: center;
            width: 8vw;
            height: 50px;
            font-size: 14px;
            font-family: Inter;
            font-weight: 800;
            word-wrap: break-word;
            display: flex;
            align-items: center;
            justify-content: center
        }

        .EllipseImg {
            width: 50px;
            height: 50px;
            padding: 0px;
            position: absolute;
            border-radius: 50%;
            margin: 5px;
        }




        /* CSS */
        .buttonHeader {
            align-items: center;
            appearance: none;
            border-radius: 8px;
            border-style: none;
            box-shadow: rgba(0, 0, 0, .2) 0 3px 1px -2px,rgba(0, 0, 0, .14) 0 2px 2px 0,rgba(0, 0, 0, .12) 0 1px 5px 0;
            box-sizing: border-box;
            color: #fff;
            cursor: pointer;
            display: inline-flex;
            font-family: Roboto,sans-serif;
            font-size: .775rem;
            font-weight: 500;
            height: 36px;
            justify-content: center;
            letter-spacing: .0892857em;
            line-height: normal;
            min-width: 30px;
            outline: none;
            overflow: visible;
            padding: 0 16px;
            position: relative;
            text-align: center;
            text-decoration: none;
            transition: box-shadow 280ms cubic-bezier(.4, 0, .2, 1);
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            vertical-align: middle;
            will-change: transform,opacity;
        }

            .buttonHeader:hover {
                box-shadow: rgba(0, 0, 0, .2) 0 2px 4px -1px, rgba(0, 0, 0, .14) 0 4px 5px 0, rgba(0, 0, 0, .12) 0 1px 10px 0;
            }

            .buttonHeader:disabled {
                background-color: rgba(0, 0, 0, .12);
                box-shadow: rgba(0, 0, 0, .2) 0 0 0 0, rgba(0, 0, 0, .14) 0 0 0 0, rgba(0, 0, 0, .12) 0 0 0 0;
                color: rgba(0, 0, 0, .37);
                cursor: default;
                pointer-events: none;
            }

            .buttonHeader:not(:disabled) {
                background-color: #F6BC63;
            }

            .buttonHeader:focus {
                box-shadow: rgba(0, 0, 0, .2) 0 2px 4px -1px, rgba(0, 0, 0, .14) 0 4px 5px 0, rgba(0, 0, 0, .12) 0 1px 10px 0;
            }

            .buttonHeader:active {
                box-shadow: rgba(0, 0, 0, .2) 0 5px 5px -3px, rgba(0, 0, 0, .14) 0 8px 10px 1px, rgba(0, 0, 0, .12) 0 3px 14px 2px;
                background: #A46BF5;
            }

        body {
            background-color: #f0f0f0;
            height: 100%;
            margin: 0;
            overflow-x: hidden;
            font-family: 'Inter', sans-serif;
        }

    </style>


</head>
<body>
    <header class="header">
        <div class="">
            <div class="HeaderRow" style="height:60px; position: relative">
                <div class="" style="width: 100%; height: 60px; left: 0px; top: 0px; padding:5px;box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px; position: absolute; background: #FFFDAB"></div>


                <div class="">
                    <div class="row" style="height:60px; margin:0px;">
                        <div class="col-1" style=" height:60px; display: flex; align-items:center; justify-content:center;">
                            <div class="logo"></div>
                        </div>

                        <div class="col-3" style="height:60px;">
                            <div class="search-box">
                                <button class="btn-search"><i class="fas fa-search"></i></button>
                                <input type="text" class="input-search" placeholder="Type to Search...">
                            </div>

                        </div>
                        <div class="col-4">
                            <div style="position: absolute;">
                                @* Back ground sau cái chữ*@
                                @*  <div class="Background1" style="width: 114px; height: 50px; left: 562px; top: 0px; position: absolute; background: #FFADAB"></div>
                                <div class="Background2" style="width: 127px; height: 50px; left: 790px; top: 0px; position: absolute; background: #FFFDAB"></div>
                                <div class="Background3" style="width: 114px; height: 50px; left: 676px; top: 0px; position: absolute; background: #FFADAB"></div> *@
                                <div class="row" style=" display: flex;">
                                    <div class="boxtext col-3"><a href="~/Home" style="text-decoration:none">Newfeed</a></div>
                                    <div class="boxtext col-3"><a>Category</a></div>
                                    <div class="boxtext col-3"><a href="~/Recommend/" style="text-decoration:none">Recommend</a></div>

                                    <div class="boxtext col-3"><a href="~/Route/NewPost" style="text-decoration:none">Newpost</a></div>
                                </div>
                            </div>

                        </div>
                        <div class="col-1">
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="col-3">
                                <div class="row">
                                    <div class="col-5">
                                        <div class="row" style=" position: relative;">
                                            @{
                                                var user = await _signInManager.UserManager.FindByNameAsync(User.Identity.Name);
                                            }
                                            <a href="~/Route/Info">
                                                @if (user.AvatarUrl != null)
                                                {
                                                    <img class="EllipseImg" src="@user.AvatarUrl" />
                                                } else
                                                {
                                                    <img class="EllipseImg" src="https://cdn.sforum.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg" />
                                                }
                                            </a>
                                            <a href="~/Route/Info" style="z-index:2; text-decoration:none; padding:10px 0px 0px 70px; position: absolute; color: black; font-size: 14px; font-family: Inter; font-weight: 600"> @user.FirstName @user.LastName </a>
                                            @if (user.IsPremium == ZAlpha.Domain.Enums.PremiumStatus.Active)
                                            {
                                                <div class="" style=" padding:30px 0px 0px 70px; position: absolute; color: #F08E17; font-size: 10px; font-family: Inter; font-weight: 400; word-wrap: break-word">Premium</div>
                                            }
                                            else
                                            {
                                                <div class="" style=" padding:30px 0px 0px 70px; position: absolute; color: #009EFF; font-size: 10px; font-family: Inter; font-weight: 400; word-wrap: break-word">Freemium</div>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-7">
                                        <div class="row" style=" position: relative;">
                                            <div style=" position: absolute;">
                                                <button class="buttonHeader" style="width:7vw; height: 20px; margin-top:4.5px; display: block; font-size: 10px;"> Membership</button>
                                                <form method="get" action="~/logout">
                                                    <button class="buttonHeader" style="width:7vw; height: 20px; margin-top:6px; display: block; font-size: 10px; background-color: #9ACFC3;"> Sign Out</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        }
                        else
                        {
                            <div class="col-2">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="row" style=" position: relative;">
                                            <div style=" position: absolute;">
                                                <form action="~/Login" method="get">
                                                    <button class="buttonHeader" style="width:7vw; height: 20px; margin-top:4.5px; margin-left: 4vw; display: block; font-size: 10px;"> Sign In</button>
                                                </form>
                                                <form method="get" action="~/Register">
                                                    <button class="buttonHeader" style="width:7vw; height: 20px; margin-top:6px;   margin-left: 4vw; display: block; font-size: 10px; background-color: #9ACFC3;">Sign up</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </header>
    <div class="" style="margin:5px 10vw;">

        @RenderBody()

    </div>

    <footer>
        <div class="FooterRow" style="height:280px; position: relative">
            <div style="width: 100%; height: 280px; left: 0px; top: 0px; position: absolute; background: #FFFDAB"></div>
            <div class="row">
                <div class="col-4" style="padding:3vw 5vw;">

                    <div style=" position: absolute; display:block; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word">Địa chỉ</div>
                    <br />
                    <div style=" position: absolute; display:block; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Lô E2a-7, Đường D1, Đ. D1, Long Thạnh Mỹ,<br />Thành Phố Thủ Đức, Thành phố Hồ Chí Minh, Việt Nam</div>
                    <br />
                    <br />
                    <div style=" position: absolute; display:block; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word">Hotline</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">1900 0007</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 600; word-wrap: break-word">Email</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">zalphasupport@gmail.com</div>

                </div>
                <div class="col-2" style="padding:3vw 5vw;">
                    <div style="position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Về chúng tôi</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Chính sách bảo mật</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Điều khoản sử dụng</div>
                </div>
                <div class="col-2" style="padding:3vw 5vw;">

                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Đăng ký cộng tác viên</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Câu hỏi thường gặp</div>
                    <br />
                    <div style=" position: absolute; color: #2364AA; font-size: 14px; font-family: Inter; font-weight: 400; word-wrap: break-word">Tải app mobile</div>
                    <br />

                </div>
                <div class="col-4" style="padding:3vw 5vw;">
                    <div style=" position: absolute;">
                        <i class="fa-brands fa-square-facebook fa-2xl" style="color:#DEA941; margin:0.3vw;"></i>

                        <i class="fa-brands fa-square-instagram fa-2xl" style="color:#DEA941; margin:0.3vw;"></i>

                        <i class="fa-brands fa-square-x-twitter fa-2xl" style="color:#DEA941; margin:0.3vw;"></i>
                    </div>
                </div>

            </div>


        </div>
    </footer>
</body>
</html>